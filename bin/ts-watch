#!/bin/sh

# TypeScript watch mode script
# This script runs TypeScript compiler in watch mode with setup

set -e  # Exit on error

# Load environment variables
. bin/load-env

echo "ğŸ” Starting TypeScript watch mode..."

echo "ğŸ”„ Generating Prisma client..."
pnpm prisma generate

echo "ğŸ”„ Generating React Router types..."
pnpm react-router typegen

echo "ğŸ‘€ Watching for TypeScript changes..."
pnpm tsc --project tsconfig.json --noEmit --skipLibCheck --watch
